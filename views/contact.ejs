<!-- @format -->

<% layout("/layouts/boilerplate") %>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.contactContainer {
		padding-top: 40px;
		margin-top: -10px;
		margin-left: -60px;
		width: 100vw;
		background-color: #495057;
		color: white;
	}
	.bg-dark-section {
		background-color: #212529;
		border-radius: 0.5rem;
	}
	.contact-header {
		font-size: 2rem;
		font-weight: bold;
		color: white;
	}
	.contact-description {
		color: rgb(218, 218, 218);
	}
	.contact-form {
		border: 1px solid #495057;
		padding: 4rem;
		border-radius: 0.5rem;
		background-color: #343a40;
        padding-bottom: 80px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
	}
    .contact-form:hover{
        transform: scale(1.02);
        box-shadow: 0 8px 16px rgba(255, 193, 7, 0.2);
    }
	.form-control:focus {
        box-shadow: none;
		border-color: #ffc107;
	}
	.btn-submit {
		background-color: #ffc107;
		color: #000;
		font-weight: bold;
		transition: all 0.3s;
	}
	.btn-submit:hover {
		background-color: #ffca2c;
	}
	.contact-icon {
		font-size: 1.5rem;
		color: #ffc107;
	}
    .section{
        padding-bottom: 150px;
    }
</style>

<body>
	<div class="contactContainer">
		<div class="container my-5">
			<div class="d-flex flex-column align-items-center section">
				<div class="text-center">
					<h1 class="contact-header mb-3">
						Got an Idea? We’ve Got the Skills. Let’s Team Up
					</h1>
					<p class="contact-description">
						Tell us more about yourself and what you’ve got in mind.
					</p>
				</div>

				<div class="row mt-5 w-100">
					<!-- Contact Form -->
					<div class="col-lg-6 mx-auto">
						<form
							class="contact-form"
							method="POST"
							action="/contact">
							<!-- Name Fields -->
							<div class="row mb-3">
								<div class="col">
									<label
										for="firstname"
										class="form-label"
										>First Name</label
									>
									<input
										type="text"
										class="form-control"
										name="firstname"
										placeholder="Enter first name"
										required />
								</div>
								<div class="col">
									<label
										for="lastName"
										class="form-label"
										>Last Name</label
									>
									<input
										type="text"
										class="form-control"
										name="lastname"
										placeholder="Enter last name" />
								</div>
							</div>

							<!-- Email -->
							<div class="mb-3">
								<label
									for="email"
									class="form-label"
									>Email Address</label
								>
								<input
									type="email"
									class="form-control"
									name="email"
									placeholder="Enter email address"
									required />
							</div>

                            <!-- Subject -->
							<div class="mb-3">
								<label
									for="subject"
									class="form-label"
									>Subject</label
								>
								<input
									type="text"
									class="form-control"
									name="subject"
									placeholder="Enter your subject"
									required />
							</div>

							<!-- Message -->
							<div class="mb-4">
								<label
									for="message"
									class="form-label"
									>Message</label
								>
								<textarea
									class="form-control"
									name="message"
									rows="5"
									placeholder="Enter your message here"
									required></textarea>
							</div>

							<!-- Submit Button -->
							<button
								type="submit"
								name="saveButton"
								class="btn btn-submit w-100">
								Send Message
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
